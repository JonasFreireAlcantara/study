<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="31dp" tools:layout_editor_absoluteX="39dp" android:id="@+id/edit_text_user"
            android:hint="User"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            tools:layout_editor_absoluteY="110dp" tools:layout_editor_absoluteX="38dp"
            android:id="@+id/edit_text_password"
            android:hint="Password"/>
    <Button
            android:text="SIGN UP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="212dp"
            tools:layout_editor_absoluteX="164dp" android:id="@+id/button_sign_up"/>
</android.support.constraint.ConstraintLayout>